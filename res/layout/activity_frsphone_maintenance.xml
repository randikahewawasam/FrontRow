 <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mainbg"
        android:orientation="vertical" >

     <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/answeractivitycarddropdowncollapsbg"
            android:padding="8dp" >
            
          <View
                android:layout_width="fill_parent"
                android:layout_height="10dp" />

            <TableRow>

                <TextView
                    android:id="@+id/phnmain_numbertext"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:paddingLeft="8dip"
                    android:text="@string/NUMBER_TEXT"
                    android:textColor="@color/ListSelectorColor" />

                <EditText
                    android:id="@+id/phnmain_numberid"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/frs_edit_text"
                    android:minHeight="@dimen/Login_Page_EditText_Min_Height"
                    android:paddingLeft="5dp"
                    android:imeOptions="actionNext"
                    android:nextFocusDown="@+id/addmain_cityid"
                    android:singleLine="true"
                    android:inputType="phone"
                    android:textSize="@dimen/Login_Page_EditText_Font_Size" />
            </TableRow>

        
            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp" />

            <TableRow>

                <TextView
                    android:id="@+id/phnmain_reltextid"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:paddingLeft="8dip"
                    android:text="@string/RELATIONSHIP_TXT"
                    android:textColor="@color/ListSelectorColor" />

                <Spinner
                    android:id="@+id/phnmain_reltypes"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/contact_drop_down"
                    android:editable="false" />
            </TableRow>
            
               <TableRow>

                <TextView
                    android:id="@+id/phnmain_primary_txt_id"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:paddingLeft="8dip"
                    android:text="@string/PRIMARY_TXT"
                    android:textColor="@color/ListSelectorColor" />

                <CheckBox
                    android:id="@+id/phnmain_primary_chk_boxid"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@drawable/frs_custom_checked_box"
                    android:nextFocusUp="@+id/addmain_countryid"
                    android:imeOptions="actionDone"
                    android:editable="false"
                    android:gravity="center_horizontal|center_vertical" />
            </TableRow>
            
      </TableLayout>
             <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="8dp" >

            <TableRow>

                <Button
                    android:id="@+id/phndeletebtn"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="@drawable/delete_button"
                    android:text="@string/PHONE_DELETE_TXT"
                    android:textColor="@color/ColorPureWhite"
                    android:textStyle="bold" />
            </TableRow>

               <TableRow>

                <Button
                    android:id="@+id/phn_addbtn"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="@drawable/login_button"
                    android:text="@string/CTREATE_PHONE_TXT"
                    android:textColor="@color/ColorPureWhite"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </TableRow>
        </TableLayout>    


</LinearLayout>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mainbg"
        android:orientation="vertical" >

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/answeractivitycarddropdowncollapsbg"
            android:padding="8dp" >

            <TableRow>

                <TextView
                    android:id="@+id/contactdetailtextid"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dip"
                    android:text="@string/CONTACT_DETAIL_TXT"
                    android:textColor="@color/ListSelectorColor"
                    android:textStyle="bold" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp" />

            <TableRow>

                <TextView
                    android:id="@+id/salutationtxtid"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:paddingLeft="8dip"
                    android:text="@string/SALUTATION_TXT"
                    android:textColor="@color/ListSelectorColor" />

                <EditText
                    android:id="@+id/salutationid"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/frs_edit_text"
                    android:minHeight="@dimen/Login_Page_EditText_Min_Height"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textSize="@dimen/Login_Page_EditText_Font_Size" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp" />

            <TableRow>

                <TextView
                    android:id="@+id/firstnametxtid"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:paddingLeft="8dip"
                    android:text="@string/FIRST_NAME_TXT"
                    android:textColor="@color/ListSelectorColor" />

                <EditText
                    android:id="@+id/firstnameid"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/frs_edit_text"
                    android:minHeight="@dimen/Login_Page_EditText_Min_Height"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textSize="@dimen/Login_Page_EditText_Font_Size" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp" />

            <TableRow>

                <TextView
                    android:id="@+id/lastnametxtid"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:paddingLeft="8dip"
                    android:text="@string/LAST_NAME_TXT"
                    android:textColor="@color/ListSelectorColor" />

                <EditText
                    android:id="@+id/lastnameid"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/frs_edit_text"
                    android:minHeight="@dimen/Login_Page_EditText_Min_Height"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textSize="@dimen/Login_Page_EditText_Font_Size" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp" />

            <TableRow>

                <TextView
                    android:id="@+id/emailtxtid"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:paddingLeft="8dip"
                    android:text="@string/EMAIL_TXT"
                    android:textColor="@color/ListSelectorColor" />

                <EditText
                    android:id="@+id/emailid"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/frs_edit_text"
                    android:inputType="textEmailAddress"
                    android:minHeight="@dimen/Login_Page_EditText_Min_Height"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textSize="@dimen/Login_Page_EditText_Font_Size" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp" />

            <TableRow>

                <TextView
                    android:id="@+id/titletxtid"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:paddingLeft="8dip"
                    android:text="@string/TITLE_TXT"
                    android:textColor="@color/ListSelectorColor" />

                <EditText
                    android:id="@+id/titleid"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/frs_edit_text"
                    android:minHeight="@dimen/Login_Page_EditText_Min_Height"
                    android:paddingLeft="8dip"
                    android:singleLine="true"
                    android:textSize="@dimen/Login_Page_EditText_Font_Size" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp" />

            <TableRow>

                <TextView
                    android:id="@+id/con_rel_txt_id"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:paddingLeft="8dip"
                    android:text="@string/RELATIONSHIP_TXT"
                    android:textColor="@color/ListSelectorColor" />

                <Spinner
                    android:id="@+id/contactreltypes"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/contact_drop_down"
                    android:editable="false" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp" />

            <TableRow>

                <TextView
                    android:id="@+id/primary_txt_id"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:paddingLeft="8dip"
                    android:text="@string/PRIMARY_TXT"
                    android:textColor="@color/ListSelectorColor" />

                <CheckBox
                    android:id="@+id/primary_chk_boxid"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@drawable/frs_custom_checked_box"
                    android:editable="false"
                    android:gravity="center_horizontal|center_vertical" />
            </TableRow>
        </TableLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="5dp" />

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/answeractivitycarddropdowncollapsbg"
            android:padding="8dp" >

            <TableRow>

                <TextView
                    android:id="@+id/phonedetailtextid"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingLeft="8dip"
                    android:text="@string/PHONE_NUMBER_TXT"
                    android:textColor="@color/ListSelectorColor"
                    android:textStyle="bold" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp" />

            <TableRow android:id="@+id/number1row" >

                <TextView
                    android:id="@+id/number1textid"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:paddingLeft="8dip"
                    android:text="@string/PHONE_NUMBER_1"
                    android:textColor="@color/ListSelectorColor" />

                <EditText
                    android:id="@+id/number1id"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/frs_edit_text"
                    android:minHeight="@dimen/Login_Page_EditText_Min_Height"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textSize="@dimen/Login_Page_EditText_Font_Size" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp" />

            <TableRow>

                <TextView
                    android:id="@+id/number2textid"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:paddingLeft="8dip"
                    android:text="@string/PHONE_NUMBER_2"
                    android:textColor="@color/ListSelectorColor" />

                <EditText
                    android:id="@+id/number2id"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/frs_edit_text"
                    android:minHeight="@dimen/Login_Page_EditText_Min_Height"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textSize="@dimen/Login_Page_EditText_Font_Size" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp" />

            <TableRow>

                <TextView
                    android:id="@+id/phn_rel_txt_id"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:paddingLeft="8dip"
                    android:text="@string/RELATIONSHIP_TXT"
                    android:textColor="@color/ListSelectorColor" />

                <Spinner
                    android:id="@+id/phnreltypes"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/contact_drop_down"
                    android:editable="false" />
            </TableRow>
        </TableLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="5dp" />

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/answeractivitycarddropdowncollapsbg"
            android:padding="8dp" >

            <TableRow>

                <TextView
                    android:id="@+id/addressdetailtextid"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingLeft="8dip"
                    android:text="@string/ADDRESS_TXT"
                    android:textColor="@color/ListSelectorColor"
                    android:textStyle="bold" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp" />

            <TableRow>

                <TextView
                    android:id="@+id/streettextid"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:paddingLeft="8dip"
                    android:text="@string/STREET_TXT"
                    android:textColor="@color/ListSelectorColor" />

                <EditText
                    android:id="@+id/streetid"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/frs_edit_text"
                    android:minHeight="@dimen/Login_Page_EditText_Min_Height"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textSize="@dimen/Login_Page_EditText_Font_Size" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp" />

            <TableRow android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/citytextid"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:paddingLeft="8dip"
                    android:text="@string/CITY_TXT"
                    android:textColor="@color/ListSelectorColor" />

                <EditText
                    android:id="@+id/cityid"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/frs_edit_text"
                    android:minHeight="@dimen/Login_Page_EditText_Min_Height"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textSize="@dimen/Login_Page_EditText_Font_Size" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp" />

            <TableRow>

                <TextView
                    android:id="@+id/provincetextid"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:paddingLeft="8dip"
                    android:text="@string/PROVINCE_TXT"
                    android:textColor="@color/ListSelectorColor" />

                <EditText
                    android:id="@+id/provinceid"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/frs_edit_text"
                    android:minHeight="@dimen/Login_Page_EditText_Min_Height"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textSize="@dimen/Login_Page_EditText_Font_Size" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp" />

            <TableRow>

                <TextView
                    android:id="@+id/postaltextid"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:paddingLeft="8dip"
                    android:text="@string/ZIP_TXT"
                    android:textColor="@color/ListSelectorColor" />

                <EditText
                    android:id="@+id/postalid"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/frs_edit_text"
                    android:minHeight="@dimen/Login_Page_EditText_Min_Height"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textSize="@dimen/Login_Page_EditText_Font_Size" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp" />

            <TableRow>

                <TextView
                    android:id="@+id/countrytextid"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:paddingLeft="8dip"
                    android:text="@string/COUNTRY_TXT"
                    android:textColor="@color/ListSelectorColor" />

                <EditText
                    android:id="@+id/countryid"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/frs_edit_text"
                    android:minHeight="@dimen/Login_Page_EditText_Min_Height"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textSize="@dimen/Login_Page_EditText_Font_Size" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp" />

            <TableRow>

                <TextView
                    android:id="@+id/addreltextid"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:paddingLeft="8dip"
                    android:text="@string/RELATIONSHIP_TXT"
                    android:textColor="@color/ListSelectorColor" />

                <Spinner
                    android:id="@+id/addreltypes"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/contact_drop_down"
                    android:editable="false" />
            </TableRow>
        </TableLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="5dp" />

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/answeractivitycarddropdowncollapsbg"
            android:padding="8dp" >

            <TableRow>
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="8dp" >

            <TableRow>

                <Button
                    android:id="@+id/condeletebtn"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="@drawable/delete_button"
                    android:text="@string/CONTACT_DELETE_TXT"
                    android:textColor="@color/ColorPureWhite"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/conaddbtn"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="@drawable/login_button"
                    android:text="@string/CONTACT_ADD"
                    android:textColor="@color/ColorPureWhite"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000" >

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                 android:id="@+id/clname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Client Name"
                android:textColor="@color/ColorPureWhite"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/claddress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Client Address"
                android:textColor="@color/ColorPureWhite"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/clmobilenumber"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Client TP number"
                android:textColor="@color/ColorPureWhite"
                android:textSize="14dp" />
        </LinearLayout>
    </TableRow>

    <TableRow>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >
          <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text=""
              
                />
            <Button
                android:id="@+id/callbtn"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:drawableTop="@drawable/callicon"
                android:text="Call" 
                android:background="@null"
                android:textColor="@color/ColorPureWhite"
                />
              <Button
                android:id="@+id/mapbtn"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:drawableTop="@drawable/mapicon"
                android:text="Map" 
                android:textColor="@color/ColorPureWhite"
                android:background="@null"/>
                 <Button
                android:id="@+id/directionbtn"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:drawableTop="@drawable/directionicon"
                android:text="Direction" 
                android:textColor="@color/ColorPureWhite"
                android:background="@null"/>
        </LinearLayout>
    </TableRow>
   <ListView
        android:id="@+id/clintprofilelist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:cacheColorHint="#ffffff"
        android:drawSelectorOnTop="false" 
        android:background="@drawable/listbg"
        android:divider="@drawable/separator"
        />
</TableLayout>
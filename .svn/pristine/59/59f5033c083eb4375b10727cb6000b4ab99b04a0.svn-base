<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dip" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/contactnametext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="My Application"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/contacttitletext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="title"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/contactemailtext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="email"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/contactaddresstext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="address"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.7"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/callbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="6dip"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/callicon" />

                <TextView
                    android:id="@+id/contacttpnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="phone"
                    android:singleLine="true"
                    android:textSize="12dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/contactprimarytext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:text="primary"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            we="" >
        >
            <!--
             <TextView
            android:id="@+id/view1"
            android:layout_width="0px"
              android:layout_weight="0.4"
            android:layout_height="wrap_content"
            ></TextView>
            -->

            <Button
                android:id="@+id/conemailbtn"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:background="@null"
                android:drawableTop="@drawable/email"
                android:text="Email"
                android:textColor="@color/ColorPureWhite" />

            <Button
                android:id="@+id/connumbersbtn"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:background="@null"
                android:drawableTop="@drawable/numbersicon"
                android:text="Numbers"
                android:textColor="@color/ColorPureWhite" />

            <Button
                android:id="@+id/conmapbtn"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:background="@null"
                android:drawableTop="@drawable/mapicon"
                android:text="Map"
                android:textColor="@color/ColorPureWhite" />

            <Button
                android:id="@+id/condirectionbtn"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:background="@null"
                android:drawableTop="@drawable/directionicon"
                android:text="Directions"
                android:textColor="@color/ColorPureWhite" />
        </TableRow>
    </TableLayout>

</LinearLayout>